{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": true,
  "vitest": {
    "config": ["**/vitest.config.ts"]
  },
  "workspaces": {
    ".": {
      "entry": ["lefthook.yml"]
    },
    "packages/boxed": {
      "ignoreDependencies": [
        "@swan-io/boxed",
        "@temporal-contract/typedoc",
        "typedoc-plugin-markdown"
      ]
    },
    "packages/client": {
      "entry": ["src/__tests__/test.workflows.ts"],
      "ignoreDependencies": ["@temporal-contract/typedoc", "typedoc-plugin-markdown"]
    },
    "packages/contract": {
      "ignoreDependencies": ["@temporal-contract/typedoc", "typedoc-plugin-markdown"]
    },
    "packages/worker": {
      "entry": ["src/__tests__/test.workflows.ts"],
      "ignoreDependencies": ["@temporal-contract/typedoc", "typedoc-plugin-markdown"]
    },
    "packages/worker-nestjs": {
      "ignoreDependencies": ["@temporal-contract/typedoc", "typedoc-plugin-markdown"]
    },
    "packages/client-nestjs": {
      "ignoreDependencies": ["@temporal-contract/typedoc", "typedoc-plugin-markdown"]
    },
    "packages/testing": {
      "ignoreDependencies": ["@temporal-contract/typedoc", "typedoc-plugin-markdown"]
    },
    "examples/order-processing-worker": {
      "entry": ["src/application/workflows.ts"]
    },
    "examples/order-processing-worker-nestjs": {
      "entry": ["src/workflows.ts"]
    },
    "tools/tsconfig": {
      "entry": ["*.json"]
    },
    "tools/typedoc": {
      "entry": ["*.json"],
      "ignoreDependencies": ["typedoc", "typedoc-plugin-markdown"]
    },
    "docs": {
      "ignoreDependencies": ["@temporal-contract/tsconfig"]
    }
  },
  "ignore": ["coverage/**", "**/dist/**"],
  "ignoreDependencies": ["pino-pretty"]
}
