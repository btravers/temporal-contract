{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": true,
  "vitest": {
    "config": ["**/vitest.config.ts"]
  },
  "workspaces": {
    ".": {
      "entry": ["lefthook.yml"]
    },
    "packages/boxed": {
      "ignoreDependencies": ["@swan-io/boxed"]
    },
    "packages/client": {
      "entry": ["src/index.ts", "src/__tests__/test.workflows.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/contract": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/worker": {
      "entry": ["src/activity.ts", "src/workflow.ts", "src/__tests__/test.workflows.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/worker-nestjs": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/client-nestjs": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/testing": {
      "entry": ["src/extension.ts", "src/global-setup.ts"],
      "project": ["src/**/*.ts"]
    },
    "samples/order-processing-contract": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "samples/order-processing-worker": {
      "entry": ["src/application/worker.ts", "src/application/workflows.ts"],
      "project": ["src/**/*.ts"]
    },
    "samples/order-processing-worker-nestjs": {
      "entry": ["src/main.ts", "src/workflows.ts"],
      "project": ["src/**/*.ts"]
    },
    "samples/order-processing-client": {
      "entry": ["src/client.ts"],
      "project": ["src/**/*.ts"]
    },
    "tools/*": {
      "entry": ["*.json"]
    },
    "website": {
      "entry": ["docs/.vitepress/config.ts", "docs/.vitepress/theme/index.ts"]
    }
  },
  "ignore": ["coverage/**", "**/dist/**"],
  "ignoreDependencies": ["pino-pretty"]
}
