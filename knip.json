{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": true,
  "vitest": {
    "config": ["**/vitest.config.ts"]
  },
  "workspaces": {
    ".": {
      "entry": ["lefthook.yml"]
    },
    "packages/boxed": {
      "ignoreDependencies": ["@swan-io/boxed", "@temporal-contract/typedoc"],
      "ignoreBinaries": ["typedoc"]
    },
    "packages/client": {
      "entry": ["src/index.ts", "src/__tests__/test.workflows.ts"],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["@temporal-contract/typedoc"],
      "ignoreBinaries": ["typedoc"]
    },
    "packages/contract": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["@temporal-contract/typedoc"],
      "ignoreBinaries": ["typedoc"]
    },
    "packages/worker": {
      "entry": ["src/activity.ts", "src/workflow.ts", "src/__tests__/test.workflows.ts"],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["@temporal-contract/typedoc"],
      "ignoreBinaries": ["typedoc"]
    },
    "packages/worker-nestjs": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["@temporal-contract/typedoc"],
      "ignoreBinaries": ["typedoc"]
    },
    "packages/client-nestjs": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["@temporal-contract/typedoc"],
      "ignoreBinaries": ["typedoc"]
    },
    "packages/testing": {
      "entry": ["src/extension.ts", "src/global-setup.ts"],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["@temporal-contract/typedoc"],
      "ignoreBinaries": ["typedoc"]
    },
    "examples/order-processing-contract": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "examples/order-processing-worker": {
      "entry": ["src/application/worker.ts", "src/application/workflows.ts"],
      "project": ["src/**/*.ts"]
    },
    "examples/order-processing-worker-nestjs": {
      "entry": ["src/main.ts", "src/workflows.ts"],
      "project": ["src/**/*.ts"]
    },
    "examples/order-processing-client": {
      "entry": ["src/client.ts"],
      "project": ["src/**/*.ts"]
    },
    "tools/tsconfig": {
      "entry": ["*.json"]
    },
    "tools/typedoc": {
      "entry": ["*.json"],
      "ignoreDependencies": ["typedoc", "typedoc-plugin-markdown"]
    },
    "docs": {
      "entry": [".vitepress/config.ts", ".vitepress/theme/index.ts", "scripts/copy-docs.ts"]
    }
  },
  "ignore": ["coverage/**", "**/dist/**"],
  "ignoreDependencies": ["pino-pretty"]
}
