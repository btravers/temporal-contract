{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["lefthook.yml"]
    },
    "packages/*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts", "!src/**/*.spec.ts"]
    },
    "packages/worker": {
      "entry": ["src/activity.ts", "src/workflow.ts"],
      "project": ["src/**/*.ts", "!src/**/*.spec.ts"]
    },
    "packages/worker-boxed": {
      "entry": ["src/activity.ts", "src/workflow.ts"],
      "project": ["src/**/*.ts", "!src/**/*.spec.ts"]
    },
    "packages/testing": {
      "entry": ["src/extension.ts", "src/global-setup.ts"],
      "project": ["src/**/*.ts"]
    },
    "samples/basic-order-processing-contract": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "samples/basic-order-processing-worker": {
      "entry": [
        "src/application/worker.ts",
        "src/application/workflows.ts",
        "src/integration.spec.ts"
      ],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["pino-pretty"]
    },
    "samples/boxed-order-processing-worker": {
      "entry": [
        "src/application/worker.ts",
        "src/application/workflows.ts",
        "src/integration.spec.ts"
      ],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["pino-pretty"]
    },
    "samples/order-processing-client": {
      "entry": ["src/client.ts", "src/integration.spec.ts"],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["pino-pretty"]
    },
    "tools/*": {
      "entry": ["*.json"]
    },
    "website": {
      "entry": ["docs/.vitepress/config.ts"]
    }
  },
  "ignore": ["coverage/**", "**/dist/**"]
}
