{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": true,
  "ignoreDependencies": ["pino-pretty", "@temporal-contract/typedoc", "typedoc-plugin-markdown"],
  "workspaces": {
    ".": {
      "entry": ["lefthook.yml"]
    },
    "packages/*": {
      "project": ["src/**/*.ts"]
    },
    "packages/boxed": {
      "ignoreDependencies": ["@swan-io/boxed"]
    },
    "packages/client": {
      "entry": ["src/__tests__/test.workflows.ts"]
    },
    "packages/worker": {
      "entry": ["src/__tests__/test.workflows.ts"]
    },
    "examples/order-processing-worker": {
      "entry": ["src/application/workflows.ts"]
    },
    "examples/order-processing-worker-nestjs": {
      "entry": ["src/workflows.ts"]
    },
    "tools/tsconfig": {
      "entry": ["*.json"]
    },
    "tools/typedoc": {
      "entry": ["*.json"],
      "ignoreDependencies": ["typedoc", "typedoc-plugin-markdown"]
    },
    "docs": {
      "ignoreDependencies": ["@temporal-contract/tsconfig"]
    }
  },
  "ignore": ["coverage/**", "**/dist/**"]
}
