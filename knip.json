{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["lefthook.yml"]
    },
    "packages/*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts", "!src/**/*.spec.ts"]
    },
    "packages/worker": {
      "entry": ["src/activity.ts", "src/workflow.ts"],
      "project": ["src/**/*.ts", "!src/**/*.spec.ts"]
    },
    "packages/worker-boxed": {
      "entry": ["src/activity.ts", "src/workflow.ts"],
      "project": ["src/**/*.ts", "!src/**/*.spec.ts"]
    },
    "packages/testing": {
      "entry": ["src/extension.ts", "src/global-setup.ts"],
      "project": ["src/**/*.ts"]
    },
    "samples/*": {
      "entry": [
        "src/application/client.ts",
        "src/application/worker.ts",
        "src/application/workflows.ts",
        "src/integration.spec.ts"
      ],
      "project": ["src/**/*.ts"]
    },
    "tools/*": {
      "entry": ["*.json"]
    },
    "website": {
      "entry": [".vitepress/config.ts"]
    }
  },
  "ignore": ["coverage/**", "**/dist/**"]
}
