{
  "name": "@temporal-contract/boxed",
  "version": "0.2.0",
  "description": "Custom Future and Result implementation for Temporal workflows",
  "keywords": [
    "future",
    "result",
    "temporal",
    "typescript"
  ],
  "homepage": "https://github.com/btravers/temporal-contract#readme",
  "bugs": {
    "url": "https://github.com/btravers/temporal-contract/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/btravers/temporal-contract.git",
    "directory": "packages/boxed"
  },
  "license": "MIT",
  "author": "Benoit TRAVERS <benoit.travers.fr@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./interop": {
      "import": {
        "types": "./dist/interop.d.mts",
        "default": "./dist/interop.mjs"
      },
      "require": {
        "types": "./dist/interop.d.cts",
        "default": "./dist/interop.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts src/interop.ts --format cjs,esm --dts --clean",
    "build:docs": "typedoc",
    "dev": "tsdown src/index.ts src/interop.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@swan-io/boxed": "catalog:",
    "@temporal-contract/tsconfig": "workspace:*",
    "@temporal-contract/typedoc": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "tsdown": "catalog:",
    "typedoc": "catalog:",
    "typedoc-plugin-markdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@swan-io/boxed": "^3"
  },
  "peerDependenciesMeta": {
    "@swan-io/boxed": {
      "optional": true
    }
  }
}
