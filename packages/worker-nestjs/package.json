{
  "name": "@temporal-contract/worker-nestjs",
  "version": "0.0.5",
  "description": "NestJS integration for temporal-contract workers with decorators and DI support",
  "keywords": [
    "contract",
    "nestjs",
    "temporal",
    "typescript",
    "worker",
    "decorators",
    "dependency-injection"
  ],
  "homepage": "https://github.com/btravers/temporal-contract#readme",
  "bugs": {
    "url": "https://github.com/btravers/temporal-contract/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/btravers/temporal-contract.git",
    "directory": "packages/worker-nestjs"
  },
  "license": "MIT",
  "author": "Benoit TRAVERS <benoit.travers.frgmail.com>",
  "type": "module",
  "exports": {
    "./activity": {
      "import": {
        "types": "./dist/activity.d.mts",
        "default": "./dist/activity.mjs"
      },
      "require": {
        "types": "./dist/activity.d.cts",
        "default": "./dist/activity.cjs"
      }
    },
    "./package.json": "./package.json",
    "./workflow": {
      "import": {
        "types": "./dist/workflow.d.mts",
        "default": "./dist/workflow.mjs"
      },
      "require": {
        "types": "./dist/workflow.d.cts",
        "default": "./dist/workflow.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/activity.ts src/workflow.ts --format cjs,esm --dts --clean",
    "dev": "tsdown src/activity.ts src/workflow.ts --format cjs,esm --dts --watch",
    "test": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:watch": "vitest --project unit",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/common": "catalog:",
    "@nestjs/core": "catalog:",
    "@standard-schema/spec": "catalog:",
    "@temporal-contract/boxed": "workspace:*",
    "@temporal-contract/contract": "workspace:*",
    "@temporal-contract/worker": "workspace:*",
    "reflect-metadata": "catalog:"
  },
  "devDependencies": {
    "@nestjs/testing": "catalog:",
    "@temporal-contract/client": "workspace:*",
    "@temporal-contract/testing": "workspace:*",
    "@temporal-contract/tsconfig": "workspace:*",
    "@temporalio/client": "catalog:",
    "@temporalio/worker": "catalog:",
    "@temporalio/workflow": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "@nestjs/common": "^11",
    "@nestjs/core": "^11",
    "@temporalio/workflow": "^1",
    "reflect-metadata": "^0"
  }
}
